<!doctype html>
<html lang="{{ resource.meta.language }}">
<head>
  <meta charset="utf-8">
{% if resource.meta.title %}
  <title>{{ resource.meta.title|e }} » Une oasis, une école</title>
{% else %}
  <title>Une oasis, une école</title>
{% endif %}
{% if resource.meta.noindex %}
  <meta name="robots" content="noindex,nofollow">
{% endif %}
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <link rel="canonical" href="{{base}}{{ content_url(resource.url) }}">
  <link rel="icon" href="{{ media_url('images/l/favicon.png') }}">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,400italic|Lobster&amp;subset=latin,latin-ext" type="text/css">
  <link rel="stylesheet" href="{{ media_url('css/oasis.css') }}" type="text/css">
</head>
<body>

  <div class="oasis-sheet">
  {% include "menu.j2" %}

  <article>
{% if resource.meta.title %}
    <header>
      <h1>{{resource.meta.title|typogrify|e}}</h1>
    </header>
{% endif %}
    <div role="main">
      {% filter markdown|typogrify -%}
      {% block article -%}{%- endblock %}
      {%- endfilter %}
    </div>
  </article>
  </div>

  <footer>
    <a href="https://github.com/vincentbernat/www.une-oasis-une-ecole.fr">Sources</a>
  </footer>
</body>
</html>
